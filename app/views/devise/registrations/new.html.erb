<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="form-signup-heading">Join The Notwa Legion!</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signup"}) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :username, :class => "sr-only" %>
      <%= f.text_field :username, :class => "form-control", :placeholder => "username" %>

      <%= f.label :email, :class => "sr-only" %>
      <%= f.text_field :email, autofocus: true, :class => "form-control", :placeholder => "email" %>

      <%= f.label :password, :class => "sr-only" %>
      <% if @minimum_password_length %>
        <em>(password <%= @minimum_password_length %> characters minimum: )</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "password" %>

      <%= f.label :password_confirmation, :class => "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "confirm password" %>

      <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>

    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    <br>
  </div> <!-- column -->
</div> <!-- row -->
