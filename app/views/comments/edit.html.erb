<h1> Edit Comment</h1>

<p>
	<% if session[:user_id].nil? %>
	<%= link_to "Login", login_path %> 
	<% else %>
	<%= link_to "Logout", logout_path, method: :delete %>
	<% end %>
</p>
<hr>

<%= form_for @comment, html: {method: :put} do |f| %>
<p>
	<%= f.text_area :body, size: '50x20' %>
</p><p>
<%= f.submit "Comment!" %>
</p>
<% end %>