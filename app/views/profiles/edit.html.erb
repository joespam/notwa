<%= form_for @profile, url: user_profile_path(@user), :html => { :multipart => true } do |f| %>
	<p>
		<%  if @profile.avatar %>
			<%=  image_tag @profile.avatar.url(:thumb) %>
			<%=f.label :Avatar, "Change Avatar" %>
		<% else %>
			<%=f.label :Avatar %>
		<% end %>
		<%= f.file_field :avatar %>
	</p><p>
		<%=f.label :First %>
		<%=f.text_field :fname %>

		<%=f.label :Last %>
		<%=f.text_field :lname %>
	</p><p>
		<%=f.label :street1 %>
		<%=f.text_field :street1 %>

		<%=f.label :street2 %>
		<%=f.text_field :street2 %>
	</p><p>
		<%=f.label :City %>
		<%=f.text_field :city %>

		<%=f.label :State %>
		<%=f.text_field :state %>

		<%=f.label :Zip %>
		<%=f.text_field :zip %>
	</p><p>
		<%=f.label :Country %>
		<%=f.text_field :country %>
	</p>
		<%= f.submit :change %>
	</p>

<% end %>