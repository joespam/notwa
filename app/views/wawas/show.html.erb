<div class="container">

<h1 class="blog-title crimson avoid_brand"><%= "#{@wawa.city}, #{@wawa.state} #{@wawa.zip}" %></h1>
	<div class="row">

		<div class="col-sm-8 blog-main">
			<div class="row">
			   <div class="col-sm-10">   
					<% if @wawa.prime_photo.exists? %>
						<%= image_tag @wawa.prime_photo.url(:large) %>
					<% end %>
					<% if current_user && current_user.admin || current_user && current_user == @wawa.user_id%>
						<%= link_to "edit this wawa", edit_wawa_path(@wawa.id), class: "btn btn-default", type: "button" %>
					<% end %>
				<% if @comments && @comments.length > 0 %>
					<%= link_to "Comment", "#add_comment_lb", class: "fancybox btn btn-default" %>
				<% end %>
				</div>
				
				<div class="col-sm-2">
				   <div id="gmap_show"></div>
				</div>
			</div>
			<% if @wawa.info && @wawa.info != "" %>
				<div class="row">
					<h2 class="crimson"> Additional Info:</h2>
					<p><%= @wawa.info %></p>
					<hr>
				</div>
			<% end %>
			<h2 class="crimson">Comments</h2>
			<% if @comments && @comments.length > 0 %>
				<% @comments.each_with_index do |comment, index| %>

					<% if index%2 > 0 %>
						<div class="blog-post bordered">
					<% else %>
						 <div class="blog-post">
					<% end %> 
						<div class="row">

							<% if current_user && current_user.id == comment.user_id || current_user && current_user.admin %>
								<div class="col-sm-3">
									<p><%= link_to "Revise This Comment", "#edit_comment_#{comment.id}_lb", class: "fancybox btn btn-default comment_btn" %></p>
								</div>

								<!-- lightbox for editing this comment -->
								<div style="display:none;">
									<div id=<%="edit_comment_#{comment.id}_lb"%> >
										<%= form_for comment, url: update_comment_path(comment.id), html: {method: :patch} do |f| %>
											<p>
												<%= f.label :body, "Edit Your Comment!" %>
												<%= f.text_area :body, size: '50x20', :class => "form-control" %>
											</p><p>
												<%= f.submit "Edit Comment!", :class => "btn btn-lg btn-primary btn-block" %>
											</p>
										<% end %>
									</div>
								</div>

								<div class="col-sm-9">
									<p class="comment_byline"><%= "#{comment.updated_at.strftime("%d/%m/%Y %H:%M")}"%> by <strong><%= comment_username comment %></strong></p>
									<hr>
									<p><%= comment.body %></p>
								</div>

							<% end %>
						</div>
					</div>       <!-- end of blog-post or bordered -->
				<% end %> <!-- end of comments.each -->
			<% else %>
				<%= link_to "Be the First to Comment!", "#add_comment_lb", class: "fancybox btn btn-default" %>
			<% end %> <!-- end if comments -->

		</div> <!-- column -->

	<!-- lightbox for adding new comments -->
	<% if current_user %>	
		<div style="display:none;">
			<div id="add_comment_lb">
				<%= form_for @comment, url: comment_path(:user_id => current_user.id, :wawa_id => @wawa.id), html: {method: :post} do |f| %>
					<p>
						<%= f.label :body, "Tell Us About It!" %>
						<%= f.text_area :body, size: '50x20', :class => "form-control" %>
					</p><p>
						<%= f.submit "Comment!",:class => "btn btn-lg btn-primary btn-block" %>
					</p>
				<% end %>
			</div>
		</div>
	<% end %>
</div> <!-- container -->

	<!-- script for adding google map -->
	<script type="text/javascript">
		handler = Gmaps.build('Google');
		handler.buildMap({
				provider: {
					disableDefaultUI: false,
					// pass in other Google Maps API options here
				},
				internal: {
					id: 'gmap_show'
				}
			},
			function(){
				markers = handler.addMarkers(<%=raw @hash.to_json %>);
				handler.bounds.extendWith(markers);
				handler.fitMapToBounds();
				handler.getMap().setZoom(17);
			}
		);
	</script>

