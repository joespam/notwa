
<div class="container wawa_stucco">
	<div class="col-sm-9 col-sm-offset-2">
		<h1><%= "#{current_user.username}" %></h1>
	</div>
	<div class="row text_shad">
		<div class="col-sm-2">
			<%if @profile.avatar %>
				<%=  image_tag @profile.avatar.url(:thumb) %>
			<% else %>
				<p> Avatar, "No Avatar Selected" </p>
			<% end %>
		</div>
		<div class="col-sm-9">
			<div class="row">
				<div class="col-sm-6">
					<p> First </p><hr>
					<p class="bordered"> <%= @profile.fname %> </p>
				</div><div class="col-sm-6">
					<p> Last </p><hr>
					<p class="bordered"> <%= @profile.lname %> </p>
				</div>
			</div>
			<p> Street 1 </p><hr>
			<p class="bordered"> <%= @profile.street1 %> </p><hr>
			<% if @profile.street2 && @profile.street2 != '' %>
				<p> Street 2 </p><hr>
				<p class="bordered"> <%= @profile.street2 %> </p>
			<% end %>
			<div class="row">
				<div class="col-sm-4">
					<p> City </p><hr>
					<p class="bordered"> <%= @profile.city %> </p>
				</div><div class="col-sm-4">
					<p> State </p><hr>
					<p class="bordered"> <%= @profile.state %> </p>
				</div><div class="col-sm-4">
					<p> Zip </p><hr>
					<p class="bordered"> <%= @profile.zip %> </p>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">				
					<p> Country </p>
					<p class="bordered"> <%= @profile.country %> </p>
				</div>
			</div>
		</div>
	</div>
</div>